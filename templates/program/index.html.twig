{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block content %}
	<h1>Toutes les séries de la table program :
	</h1>
	{% for program in programs %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ program.title }}
				- Catégorie :
				{{ program.category.name }}</h2>
			<div class="poster">
				<img src="{{ program.poster}}">
			</div>
			<p>{{ program.summary }}</p>
			<pre>
				{# {{ (program.slug) }} #}
			</pre>
			<a href="{{ path("program_show", {'slug':program.slug }) }}">Voir la fiche</a>
			<a href="{{ path('program_edit', {'slug':program.slug }) }}">Modifier</a>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}
	<button>
		<a href="{{ path('program_new') }}">
			ajouter une série
		</a>
	</button>

	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
