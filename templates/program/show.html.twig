{% extends 'base.html.twig' %}
{% block title %}Série {{ program.id }}
{% endblock %}

{% block content %}
 {# {{ dump() }} #}

	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.summary }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>
	</div>
	<strong>Acteurs :</strong>
<ul>
    {% for actor in program.actors %}
        <li>{{ actor.name }} </li>
    {% else %}
        <li>Aucun acteur pour cette série</li>
    {% endfor %}
</ul>

	<div class="container">
		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-6">
			{% for season in program.seasons %}
      <div class="col">
				<button class="favorite styled">
					<a href="{{ path("program_season_show", { 'program': program.id, 'season': season.id }) }}" type="button">
						season
						{{ season.number }}</a>
				</button>
        </div>
			{% endfor %}
		</div>
	</div>

	<br>
	<a href="{{ path('category_show', { categoryName: program.category.name }) }}">
		Retour à la catégorie {{ program.category.name }}
	</a>
	<br>Ou<br>
	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>
{% endblock %}